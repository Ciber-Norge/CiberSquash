%html
  %head
    = haml(:_head)
  %body
    - player = Player.find(uid: session[:uid])
    = haml(:_nav)
    
    .pure-g
      .pure-u-1.pure-u-md-1-3.l-box
        = haml(:_avatar, locals: {player: player})
        %form.pure-form.pure-form-aligned{:action => "/minside", :method => "POST"}
          %fieldset
            %legend Min profil
            %label{:for => "racket"} Racket
            %input#date{:name => "racket", :placeholder => "Grays 140 Pro", :type => "text", :value => player.racket}
            %button.pure-button.pure-button-primary{:type => "submit"}
              Lagre
