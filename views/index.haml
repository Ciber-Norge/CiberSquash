!!!
%html
  %head
    %title Ciber Squash
    %meta{'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %link(rel="stylesheet" href="/css/pure-min.css")
    %link(rel="stylesheet" href="/css/grids-responsive-min.css")
    %link(rel="stylesheet" href="/css/style.css")
  %body
    .pure-menu.pure-menu-open.pure-menu-horizontal
      %a.pure-menu-heading{:href => "/"}
        Ciber Squash
      %ul
        %li.pure-menu-selected
          %a{:href => "/"} Home
        %li
          %a{:href => "/admin"} Admin
        %li
          %a{:href => '/auth/google_oauth2'} Sign in with Google
    = session[:access_token]
    .pure-g
      - get_events.each do | key, value |
        .pure-u-1.pure-u-md-1-3.l-box
          - date = value["date"]
          - max = value["max"]
          - participants = value["participating"]
          - id = value["id"]
          %p
            Dato: #{date}
            %br
            Plasser: #{participants.size}/#{max}
            %br
            %button.button-success.pure-button
              Bli med
            %button.button-secondary.pure-button
              PÃ¥meldte
          %form.pure-form.pure-form-aligned{:action => "/blimed?id=#{id}", :method => "POST"}
            %fieldset
              %input#name{:name => "name", :placeholder => "Navn", :type => "text"}
              %button.pure-button.pure-button-primary{:type => "submit"} Send
          %ol
            - participants.each do | p |
              %li
                =p